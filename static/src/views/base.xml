<templates id="nstda_sds_template" xml:space="preserve">

	<t t-name="Menu.needaction_counter">
	    <div id="menu_counter" class="badge pull-right" data-toggle="tooltip"  t-att-title="widget.needaction_msg">
	        <t t-if="widget.needaction_counter &gt; 99"> 99+ </t>
	        <t t-if="widget.needaction_counter &lt;= 99"> <t t-esc="widget.needaction_counter" /> </t>
	    </div>
	</t>
	
	<t t-name="Menu.needaction_counter2">
